{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch notes-backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/part4/notes-backend/index.js",
            "runtimeArgs": [
                "--watch"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            // "console": "integratedTerminal",
            // "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch notes (React)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/part4/notes",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch phonebook-backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/part4/phonebook-backend/index.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch phonebook (React)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/part4/phonebook",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*"
            }
        }
    ]
}